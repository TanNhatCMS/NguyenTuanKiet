<!DOCTYPE html>
<html lang="vi">
<!-- header -->
<%- include('./partials/head') %>
<body>
<div class="d-flex" id="wrapper">
    <!-- Sidebar-->
    <%- include('./partials/sidebar') %>
    <!-- Page content wrapper-->
    <div id="page-content-wrapper">
        <!-- Top navigation-->
        <%- include('./partials/navigation') %>
        <!-- Page content-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header mt-4">Sửa dữ liệu</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">

                                    <% if (data) { %>
                                        <form role="form" method="post">
                                            <input type="hidden" name="id" value="<%= data._id %>"/>
                                            <div class="form-group">
                                                <label for="name">Tên sản phẩm</label>
                                                <input id="name" type="text" name="name" value="<%= data.name %>"
                                                       class="form-control"
                                                       placeholder="Nhập tên mặt hàng" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="price">Giá</label>
                                                <input id="price" type="number" name="price" value="<%= data.price %>"
                                                       class="form-control"
                                                       placeholder="Nhập Giá mặt hàng" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="image"> Hình ảnh sản phẩm</label>
                                                <% if (data.image) { %>
                                                    <img class="form-control" src="<%= data.image %>" alt="<%= data.name %>"/>
                                                <% } %>
                                                <input id="image" type="text" name="image" value="<%= data.image %>"
                                                       class="form-control"
                                                       placeholder="Link hình ảnh">
                                            </div>
                                            <button type="submit" class="btn btn-secondary">Sửa dữ liệu</button>
                                        </form>
                                    <% } else { %>
                                        <form action="/admin/tim" method="post">
                                            <input type="hidden" name="go" value="sua">
                                            <div class="form-group">
                                                <label>
                                                    <input type="text" name="name" class="form-control"
                                                           placeholder="Nhập tên mặt hàng" required>
                                                </label>
                                            </div>
                                            <button type="submit" class="btn btn-secondary">Sửa dữ liệu</button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- footer -->
<%- include('./partials/footer') %>
</body>
</html>
